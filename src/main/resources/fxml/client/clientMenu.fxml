         <Label text="Use this to report any errors or suggestions"/>
         <Button fx:id="reportBtn" mnemonicParsing="false" text="Report">
            <graphic>
               <FontAwesomeIconView glyphName="PLUS"/>
            </graphic>
         </Button>
      </VBox>
   </AnchorPane>
