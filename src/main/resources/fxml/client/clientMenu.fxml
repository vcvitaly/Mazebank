            <graphic>
               <FontAwesomeIconView glyphName="USER" size="20"/>
            </graphic>
         </Button>
         <Button fx:id="logoutBtn" mnemonicParsing="false" styleClass="alt-menu-btn" text="Logout">
            <graphic>
               <FontAwesomeIconView glyphName="EXTERNAL_LINK" size="20"/>
            </graphic>
         </Button>
      </VBox>
      <VBox prefHeight="120.0" prefWidth="130.0" styleClass="report-container" AnchorPane.bottomAnchor="0.0"
